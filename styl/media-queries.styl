@media (min-width: 800px)
    header
        padding: 5px 10px;
        padding-bottom: 0;
        h1
            float: left;
            display: inline-block;
        nav 
            float: right;
            padding: 0;
            width: auto;

@media screen and (max-width: 600px)
    header 
        padding-left: 0px !important;
        h1 
            font-size: 1.7rem !important;
            margin-bottom: 0px !important;
        ul
            li
                a
                    font-size: 1rem !important;
    #hero
        #hero-box
            p
                font-size: 1.7rem;
            a
                font-size: 1.2rem;
