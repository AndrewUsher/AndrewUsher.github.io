@import 'animations'
@import 'variables'

// General styles
* 
  box-sizing: border-box;
  margin: 0;
  // outline: 2px solid red;
  padding: 0;

body 
  background: $primaryColor url(../img/cubes.png);


// Link styles
a
  cursor: pointer;
  text-decoration: none;
// End of general styles

// Header styles
header 
  display: flex;
  justify-content: space-between;
  padding: 10px;
  position: fixed;
  transition: all 800ms ease-in;
  width: 100%;
  z-index: 3;

  &:hover,
  &.header-bg 
    background-color: $primaryColor;
 
  &.header-bg
    padding: 5px;
  
  h1,
  a
    font-family: $headerFont;

  h1
    color: white;
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 10px;
  
  nav li 
    display: inline-block;
    text-align: center;
    
    a
      border-radius: 5px;
      color: white;
      display: inline-block;
      font-size: 16px;
      padding: 10px 15px;
      transition: all 400ms ease-in-out;
      
      &:hover
        background-color: rgba(darken($primaryColor, 40%), 30%);
            
// Content box styles
.box 
  background-color: white;
  margin: 0 auto 50px auto;
  max-width: 60rem;
  padding: 0 20px 20px 20px;
  width: 90%; 

  h2
    border-bottom: 2px dashed darken($primaryColor, 10%);
    font-family: 'Josefin Sans', sans-serif;
    font-size: 2.5rem;
    margin-bottom: 0.5em;
    padding: 20px 0 10px 0;
    text-align: center;

  a.link 
    background-color: rgba($primaryColor, 20%);
    border-radius: 2px;
    color: #555;
    text-decoration: none;

  a.link:hover
    background-color: rgba($primaryColor, 70%);
    color: #000;

  p
    font-family: 'Open Sans', sans-serif;
    font-size: 20px;
    line-height: 1.5em;
    margin-bottom: 20px;
// End of content box styles

// Hero container styles  
#hero
  align-items: center;
  display: flex;
  height: 100vh;
  justify-content: center;

  #hero-box
    color: white;
    font-family: 'Josefin Sans', sans-serif;
    max-width: 60rem;
    text-align: center;
    transition: all 300ms ease;

    p
      animation: heroText 2s ease-in-out;
      font-size: 3rem;
      margin-bottom: 50px;
        
    a,
    a:link,
    a:visited
      animation: heroButton 2s ease-in-out;
      border-radius: 15px;
      border: 3px solid white;
      color: white;
      display: inline-block;
      font-size: 1.5rem;
      padding: 15px 20px;
      text-decoration: none;
          
      &:hover 
        background-color: rgba(black, 10%);
        
    i 
      animation: chevron 1s ease-in-out infinite;
      animation-delay: 2s;
      animation-direction: alternate;
      bottom: 20px;
      display: block;
      margin-left: -20px;
      opacity: 0;
      left: 50%;
      position: absolute;

// End of Hero container styles        



#portfolio
  margin-bottom: 150px;
  .project 
    align-items: center;
    background-size: cover;
    border-radius: 5px;
    display: flex;
    height: 400px;
    justify-content: center;
    margin-bottom: 30px;
    max-width: 100%;
    position: relative;

    &.pong 
      background: url(../img/es6-pong.png) center center no-repeat;

    &.random-user-generator
      background: url(../img/random-user-generator.png) center center no-repeat;

    &.notepad
      background: url(../img/notepad.png) center center no-repeat;
    
    &.phaser-platformer
      background: url(../img/phaser-platformer.png) center center no-repeat;

    &.analog-clock
      background: url(../img/analog-clock.png) center center no-repeat;

    &.split-landing-page
      background: url(../img/split-landing-page.png) center center no-repeat;

    &.random-color-generator
      background: url(../img/random-color-generator.png) center center no-repeat;
    
    a,
    a:visited
      border-radius: 10px;
      color: white;
      font-family: 'Josefin Sans', sans-serif;
      padding: 30px;
      text-decoration: none;
      font-size: 2.5rem;
      text-align: center;
      transition: all 400ms ease-in-out;
      z-index: 2;
      
      &:hover
        background-color: rgba($primaryColor, 30%);
    




#contact
  position: relative;
  top: -100px;
  
  h3 
    color: darken($primaryColor, 30%);
    font-family: 'Open Sans', sans-serif;
    font-size: 26px;
    font-weight: normal;
    margin-bottom: 15px;
    text-align: center;

  .social-icons
    padding-left: 0; 
    
    li 
      list-style: none;
      margin-bottom: 25px;
      text-align: left;
      
      a:link,
      a:visited
        color: darken($primaryColor, 30%)
        
      .social-icon
        width: 100%;
        border-radius 5px;
        font-family: 'Open Sans', sans-serif;
        font-size: 26px;
        background-color: white;
        padding: 10px;
        text-decoration: none;
        transition: all 600ms ease-in-out;
          
        &:hover 
          background-color: $primaryColor;
          color: white;
        
        &:hover i 
          background-color: transparent;

footer 
  background-color: darken($primaryColor, 30%);
  padding: 15px 0;
  
  p
    font-family: $headerFont;
    font-size: 1.25rem;
    color: white;
    text-align: center;

