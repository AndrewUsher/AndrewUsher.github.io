// Variables
$primaryColor = #2980b9
$headerFont = 'Open Sans', sans-serif
white = #f4f4f4

// General styles
* 
    box-sizing: border-box;
    margin: 0;
    padding: 0;
body 
    background: $primaryColor;
    background-image: url(../img/cubes.png);
.container 
    margin: 0 auto;
    max-width: 60rem;
    width: 90%; 
.clearfix 
    clear: both;
a
    cursor: pointer;
// End of general styles

// Content box styles
.box 
    background-color: white;
    margin-bottom: 50px;
    padding: 0 20px;
    position: relative;
    padding-bottom: 20px;
    h2
        border-bottom: 2px dashed darken($primaryColor, 10%);
        font-family: 'Josefin Sans';
        font-size: 2.5rem;
        margin-bottom: 0.4em;
        padding: 20px 0 10px 0;
        text-align: center;
    h3 
        color: darken($primaryColor, 30%);
        font-weight: normal;
        margin-bottom: 15px;
    a.link 
        background-color: rgba($primaryColor, 20%);
        border-radius: 6px;
        color: #555;
        text-decoration: none;
    a.link:hover
        background-color: rgba($primaryColor, 70%);
        color: #000;
    p
        font-size: 24px;
        line-height: 1.3em;
        margin-bottom: 20px;
// End of content box styles

// Header styles
header 
    background-color: $primaryColor;
    height: auto;
    padding-left: 10px;
    padding-bottom: 15px;
    position: fixed;
    transition: all 800ms ease-in;
    width: 100%;
    z-index: 3;
    &:hover 
        background-color: $primaryColor;
    h1,
    a
        font-family: $headerFont;
    h1
        color: white;
        margin-bottom: 10px;
        font-size: 2rem;
        font-weight: 600;
        text-align: center;
    ul
        list-style none;
        text-align: center;
        li 
            display: inline-block;
            text-align: center;
            a
                border-radius: 5px;
                color: white;
                display: inline-block;
                font-size: 16px;
                text-decoration: none
                padding: 10px 15px;
                transition: all 400ms ease-in-out;
                &:hover
                    background-color: rgba(darken($primaryColor, 40%), 30%);
                    transform: scale(1.02);
            

// Hero container styles  
#hero
    align-items: center;
    display: flex;
    height: 100vh;
    background-size: cover;
    justify-content: center;
    #hero-box
        align-items: center;
        color: white;
        font-family: 'Josefin Sans', sans-serif;
        text-align: center;
        transition: all 300ms ease;
        p
            animation: heroText 2s ease-in-out;
            font-size: 3rem;
            margin-bottom: 50px;
        a
        a:link
        a:visited
            font-size: 1.5rem;
            animation: heroButton 2s ease-in-out;
            border-radius: 15px;
            border: 3px solid white;
            color: white;
            display: inline-block;
            padding: 15px 20px;
            text-decoration: none;
            &:hover 
                background-color: rgba(black, 10%);
        i 
            animation: chevron 1s ease-in-out infinite;
            animation-delay: 2s;
            animation-direction: alternate;
            bottom: 20px;
            display: block;
            margin-left: -20px;
            left: 50%;
            position: absolute;

// End of Hero container styles        



#portfolio
    margin-bottom: 150px;
    .project 
        align-items: center;
        background-size: cover;
        border-radius: 5px;
        display: flex;
        height: 400px;
        justify-content: center;
        margin-bottom: 30px;
        max-width: 100%;
        position: relative;
        a,
        a:visited
            border-radius: 10px;
            color: white;
            font-family: 'Josefin Sans', sans-serif;
            padding: 30px;
            text-decoration: none;
            font-size: 2.5rem;
            text-align: center;
            transition: all 400ms ease-in-out;
            z-index: 2;
            &:hover
                background-color: rgba($primaryColor, 30%);
    .project:before
        background-color: rgba(#000, 40%);
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
    
.pong 
    background: url(../img/es6-pong.png) center center no-repeat;

.random-user-generator
    background: url(../img/random-user-generator.png) center center no-repeat;

.notepad
    background: url(../img/notepad.png) center center no-repeat;
    
.phaser-platformer
    background: url(../img/phaser-platformer.png) center center no-repeat;

.analog-clock
    background: url(../img/analog-clock.png) center center no-repeat;

.split-landing-page
    background: url(../img/split-landing-page.png) center center no-repeat;

.random-color-generator
    background: url(../img/random-color-generator.png) center center no-repeat;



#contact
    position: relative;
    top: -100px;
    h3 
        font-size: 30px;
        text-align: center;

.social-icons
    padding-left: 0; 
    li 
        list-style: none;
        margin-bottom: 25px;
        text-align: left;
        a:link,
        a:visited
            color: darken($primaryColor, 30%)
        .social-icon
            width: 100%;
            border-radius 5px;
            font-size: 30px;
            background-color: white;
            padding: 10px;
            text-decoration: none;
            transition: all 600ms ease-in-out;
        .social-icon:hover 
            background-color: $primaryColor;
            color: white;
        .social-icon:hover i 
            background-color: transparent;

footer 
    background-color: darken($primaryColor, 30%);
    padding: 15px 0;
    p
        font-family: $headerFont;
        font-size: 1.25rem;
        color: white;

@keyframes shake
    25%
        transform: rotate(10deg);
    50%
        transform: rotate(-10deg);
    60%
        transform: rotate(10deg);
    100%
        transform: rotate(0deg);

@media (min-width: 800px)
    header
        padding: 5px 10px;
        padding-bottom: 0;
        h1
            float: left;
            display: inline-block;
        nav 
            float: right;
            padding: 0;
            width: auto;

@media screen and (max-width: 600px)
    #hero
        #hero-box
            p
                font-size: 1.7rem;
            a
                font-size: 1.2rem;

@keyframes heroText 
    from 
        opacity 0;
        transform: scale(.8)
        transform: translateY(-40vh);
    to 
        opacity 1;
        transform: none;

@keyframes heroButton 
    from 
        opacity: 0;
        transform: translateY(30vh);
    to 
        opacity: 1;
        transform: none;

@keyframes chevron
    from
        transform: translateY(-30px);
        opacity: 0.6;
    to
        opacity: 1;
        transform: none;
        
