// Variables
primaryColor = #3558c2 
headerFont = 'Open Sans', sans-serif
boxPadding = 30px
white = #f4f4f4

// General styles
* 
    box-sizing: border-box;
    margin: 0;
    padding; 0;
body 
    background: primaryColor;
.container 
    margin: 0 auto;
    max-width: 60rem;
    width: 90%; 
.clearfix 
    clear: both;
// End of general styles

// Content box styles
.box 
    background-color: white;
    border-radius 10px;
    box-shadow: 4px 9px 3px rgba(#000, 30%);
    margin-bottom 50px;
    padding: 0 20px;
    position: relative;
    padding-bottom: 20px;
    &:first-child
        top: -85px;
    h2
        font-size: 2.5rem;
        font-family: 'Josefin Sans'
        padding: 20px 0 10px 0;
        text-align: center
        border-bottom: 2px dashed darken(primaryColor, 10%)
        margin-bottom: 0.4em;
    h3 
        color: darken(primaryColor, 30%)
        font-weight: normal
        margin-bottom: 15px
    a.link 
        background-color: rgba(primaryColor, 20%)
        border-radius: 6px
        text-decoration: none
        color: #555
    a.link:hover
        background-color: rgba(primaryColor, 70%)
        color: #000
    p
        font-size: 24px;
        line-height: 1.3em;
        margin-bottom: 20px;
// End of content box styles

// Header styles
header 
    background-color: rgba(primaryColor, 85%);
    height: auto;
    padding-bottom: 15px;
    position: fixed;
    transition: all 800ms ease-in;
    width: 100%;
    z-index: 2;
    &:hover 
        background-color: primaryColor
    h1,
    a
        font-family: headerFont;
    h1
        color: white;
        margin-bottom: 10px;
        font-size: 2rem;
        font-weight: 600;
        text-align: center;
    ul
        list-style none
        margin-left: -40px;
        text-align: center
        li 
            display: inline-block;
            margin: 0 10px;
            text-align: center;
            a
                color: white
                font-size: 16px;
                text-decoration: none

// Hero container styles  
#hero
    background: url(../img/hero_opt.jpg) no-repeat center center fixed;
    height: 100vh;
    background-size: cover;
    #hero-box
        background: rgba(white, 85%)
        border-radius: 6px;
        color: darken(primaryColor, 20%);
        float: right; 
        font-size: 3.25rem;
        height: auto;
        padding: 10px 20px;
        margin-top: 130px;
        transition: all 300ms ease;
        &:hover
            animation: heroBox 2s
        p
            font-family: 'Josefin Sans', sans-serif
// End of Hero container styles        



#portfolio
    margin-bottom: 150px;
    h3
        text-align: center
        color: lighten(primaryColor, 20%)
    .project 
        align-items: center;
        background-size: cover;
        display: flex;
        height: 400px;
        justify-content: center;
        max-width: 100%;
        h3
            font-size: 3rem;

.phaser-platformer
    background: url(../img/phaser-platformer.png) center center no-repeat;

.analog-clock
    background: url(../img/analog-clock.png) center center no-repeat;


#contact
    position: relative
    top: -100px
    h3 
        font-size: 30px;
        text-align: center;
 
            

.social-icons
    padding-left: 0; 
    li 
        list-style: none;
        margin-bottom: 25px;
        text-align: left;
        a:visited,
        a:link
            color: primaryColor;
        .social-icon
            width: 100%;
            font-size: 30px;
            background-color: white
            padding: 10px;
            text-decoration: none;
            transition: all 600ms ease-in-out
        .social-icon:hover 
            background-color: primaryColor
            color: white
        .social-icon:hover i 
            background-color: transparent
            


@keyframes heroBox
    25%
        transform: rotate(10deg)
    50%
        transform: rotate(-10deg)
    60%
        transform: rotate(350deg)
        opacity: .8
    100%
        transform: rotate(360deg)

