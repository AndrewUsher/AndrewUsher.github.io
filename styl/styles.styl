primaryColor = #3558c2 
headerFont = 'Open Sans', sans-serif

* 
    margin 0
    padding 0
    box-sizing border-box

body 
    background linear-gradient(primaryColor, darken(primaryColor, 30%))

.container 
    max-width 960px
    margin 0 auto 

.clearfix 
    clear both

.box 
    background-color #fff
    box-shadow 4px 9px 3px rgba(#000, 30%)
    padding 15px
    h2
        font-size 48px
        font-family 'Josefin Sans'
        text-align center
        margin-bottom 20px
        border-bottom 2px dashed darken(primaryColor, 10%)
    a 
        background-color rgba(primaryColor, 20%)
        border-radius 6px
        text-decoration none
        color #555
    a:hover
        background-color rgba(primaryColor, 70%)
        color #000

header 
    height auto
    z-index 2
    background-color primaryColor
    padding 3px 0
    width 100%
    position fixed
    h1
        float left
        font-size 32px
        font-family headerFont
        color white
        display inline-block
        font-weight 600
    nav 
        float right
    ul
        list-style none
        float right
        li 
            display inline-block
            padding 12px 0 4px 0
            margin-left 10px 
            &:hover 
                border-bottom 2px solid #fff
            a
                color white
                padding 0 6px
                font-size 18px
                text-decoration none
                font-family headerFont
                
#hero
    background url('../img/hero_opt.jpg')
    height 92vh
    background-size cover
    #hero-box
        background rgba(primaryColor, 80%)
        color #ffffff
        float right 
        margin-top 14vh
        width 50%
        height auto
        padding 40px 20px
        border-radius 6px
        transition all 300ms ease
        &:hover
            animation heroBox 2s
            background primaryColor
        p
            font-size 50px
            color #ffffff
            font-family 'Josefin Sans', sans-serif
        

#about

    .about-me 
        position relative
        top -90px 

        p
            font-size 24px
            font-family 'Playfair Display'
            margin-bottom 15px

#portfolio 
    h3
        text-align center
        font-size 60px 
        color lighten(primaryColor, 20%)

#contact
    form 
        width 50%
        float left 

        
        label,
        input,
        button
            display block

        label 
            font-size 24px
            margin-bottom 3px
            color darken(primaryColor, 30%)

        label::first-child
            margin-top 0
        input
            height 45px
            margin-bottom 15px
            padding 13px 
            border-radius 5px
        input, textarea
            background-color rgba(#000, 3%)
            padding 10px
            outline none 
            border none
            width 80%
            font-size 18px
            transition all 300ms ease-in-out
            &:focus
                border 2px solid primaryColor
                background-color rgba(#000, 10%)
        #message 
            height 100px
            margin-bottom 20px
        button 
            background-color primaryColor
            border-radius 5px 
            padding 10px
            font-size 16px

    .social-icons
        float right 
        width 50%
        li 
            list-style none
            margin-bottom 15px
        .social-icon
            font-size 30px
            padding 10px
            margin-bottom 15px
            background-color white
            transition all 600ms ease-in-out
            i
                font-size 32px
                border-radius 50%
                padding 10px
                background-color primaryColor
                color white
        .social-icon:hover
            background-color primaryColor
            color white
        .social-icon:hover i 
            background-color transparent
            

@media screen and (max-width: 450px) 
    header 
        padding 5px
        h1
            text-align center 
            display block


@keyframes heroBox
    25%
        transform rotate(10deg)
    50%
        transform rotate(-10deg)
    60%
        transform rotate(350deg)
        opacity 0.5
    100%
        transform rotate(360deg)