primaryColor = #3558c2 
headerFont = 'Open Sans', sans-serif

* 
    margin 0
    padding 0
    box-sizing border-box

body 
    background primaryColor

.container 
    max-width 60rem
    width 90%
    margin 0 auto 

.clearfix 
    clear both

.box 
    background-color #fff
    box-shadow 4px 9px 3px rgba(#000, 30%)
    padding 15px
    margin-bottom 30px
    border-radius 5px
    h2
        font-size 48px
        font-family 'Josefin Sans'
        text-align center
        margin-bottom 20px
        border-bottom 2px dashed darken(primaryColor, 10%)
    h3 
        color darken(primaryColor, 30%)
        font-size 24px 
        font-weight normal
        margin-bottom 15px

    a 
        background-color rgba(primaryColor, 20%)
        border-radius 6px
        text-decoration none
        color #555
    a:hover
        background-color rgba(primaryColor, 70%)
        color #000

.slide-in 
    animation heroMoveIn 1000ms
    animation-iteration-count 1
header 
    height auto
    z-index 2
    background-color rgba(primaryColor, 80%)
    padding 6px 15px
    width 100%
    transition all 800ms ease-in
    position fixed
    &:hover 
        background-color primaryColor
    h1
        float left
        font-size 40px
        font-family headerFont
        color white
        display inline-block
        font-weight 600
    nav 
        float right
    ul
        list-style none
        float right
        li 
            display inline-block
            font-size 32px
            margin-top 8px
            margin-left 10px 
            &:hover 
                border-bottom 3px solid #fff
            a
                color white
                padding 0 6px
                font-size 18px
                text-decoration none
                font-family headerFont
                
#hero
    background url('../img/hero_opt.jpg')
    height 92vh
    background-size cover
    #hero-box
        background rgba(primaryColor, 80%)
        position relative
        color #ffffff
        float right 
        margin-top 20vh
        width 50%
        height auto
        padding 40px 20px
        border-radius 6px
        transition all 300ms ease
        &:hover
            animation heroBox 2s
            background primaryColor
        p
            font-size 50px
            color #ffffff
            font-family 'Josefin Sans', sans-serif
        

#about

    .about-me 
        position relative
        top -60px 

        h2 
            padding 5px 0

        #intro
            font-weight bold
            font-family 'Pacifico'

        p
            font-size 24px
            font-family 'Playfair Display'
            margin-bottom 15px

#portfolio 
    h3
        text-align center
        font-size 60px 
        color lighten(primaryColor, 20%)

#contact
    form 
        width 50%
        float left 

        
        label,
        input,
        button
            display block

        label 
            font-size 24px
            margin-bottom 3px
            color darken(primaryColor, 30%)

        label::first-child
            margin-top 0
        input
            height 45px
            margin-bottom 15px
            padding 13px 
            border-radius 5px
        input, textarea
            background-color rgba(#000, 7%)
            padding 10px
            outline none 
            border none
            width 80%
            font-size 18px
            transition all 300ms ease-in-out
            &:focus
                border 2px solid primaryColor
                background-color rgba(#000, 10%)
        #message 
            height 100px
            margin-bottom 20px
        button 
            background-color transparent
            color primaryColor
            border 2px solid primaryColor
            border-radius 10px 
            padding 5px 15px
            font-size 20px
            transition all 300ms ease-in-out
            margin-bottom 40px
            &:hover
                background-color primaryColor
                color #ffffff
            

    .social-icons
        float right 
        width 50%
        margin-left -22px
        li 
            list-style none
            margin-bottom 15px
        .social-icon
            font-size 30px
            padding 10px
            margin-bottom 15px
            background-color white
            transition all 600ms ease-in-out
            i
                font-size 32px
                border-radius 50%
                padding 10px
                background-color primaryColor
                color white
        .social-icon:hover
            background-color primaryColor
            color white
        .social-icon:hover i 
            background-color transparent
            

@media screen and (max-width: 550px) 
    .box 
        p 
            font-size 12px
    header 
        padding 5px
        background-color primaryColor
        h1
            float none
            display block
            text-align center 
            display block
        nav 
            width 100%
            float none
            ul
                float none
                text-align center
                display block
    #hero
        #hero-box 
            margin-top 140px
            padding 30px 10px
            width 100%
            
            p
                font-size 42px
    #contact
        form 
            display block
            float none 
            width 100%
            input, textarea 
                width 100%
        .social-icons
            display block
            float none
            margin 0 auto
            width 100%
            background-color transparent


@keyframes heroBox
    25%
        transform rotate(10deg)
    50%
        transform rotate(-10deg)
    60%
        transform rotate(350deg)
        opacity 0.5
    100%
        transform rotate(360deg)

@keyframes heroMoveIn 
    from 
        right -40%

    to 
        left 0